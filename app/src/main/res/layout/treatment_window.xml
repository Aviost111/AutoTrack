<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="50dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Click the button to report a treatment" />

    <!-- Nested LinearLayout for the horizontal arrangement of TextView and EditText -->

    <!-- Button below TextView and EditText -->
    <Button
        android:id="@+id/treatment_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/report_treatment" />

</LinearLayout>
