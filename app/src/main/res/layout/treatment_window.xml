<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_rounded_background"

    >

    <TextView
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Click the button to report a treatment"
        android:textSize="18sp"
        />

    <!-- Nested LinearLayout for the horizontal arrangement of TextView and EditText -->

    <!-- Button below TextView and EditText -->
    <Button
        android:id="@+id/treatment_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_treatment" />

</LinearLayout>
